javascripts: ['jquery', 'application']
---

.container
  %h1(style='margin:0;padding:50px 0 0;text-align:center;') Aloha world!

  - 5.times do |i|
    = content_tag "h#{i+1}".to_sym, "Heading #{i+1}"
    %p= lorem.paragraph
    - case i
      - when 0
        %p Some text with an #{link_to "inline link", "/sticky.html"} (sticky footer demo).
        %p Some text with a #{link_to "button", "#", :class => "button"} in it.
      - when 1
        %ul
          - 3.times do
            %li= lorem.sentence
      - when 2
        = code_block "javascript" do
          :plain
            var map;
            function initialize() {
              var mapOptions = {
                zoom: 8,
                center: new google.maps.LatLng(-34.397, 150.644),
                mapTypeId: google.maps.MapTypeId.ROADMAP
              };
              map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
            }

            google.maps.event.addDomListener(window, 'load', initialize);
      - when 3
        %blockquote= lorem.paragraph
      - when 4
        %div(style="background: #eee; padding: 12px;")
          %p An example to show auto-adjusting vertical rhythm within padded blocks.
          %p= lorem.sentence
    %p= lorem.paragraph

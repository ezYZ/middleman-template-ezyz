---
title: Style Guide
page_id: styleguide
---

- content_for :meta do
  %meta(name='robots' content='noindex, nofollow')

- content_for :stylesheets do
  = stylesheet_link_tag :styleguide

%section.container.container-styleguide
  %h1 Base

  %h2 Colors
  .colors-styleguide
    - %w|black gray-void gray-shale gray-steel gray-silver gray-rain gray-smoke gray-fog white|.each do |color|
      %div(class="color #{color}") .#{color}

  %h2 Grid <small>(width, position)</small>
  .grid-styleguide
    .grid-row
      - 12.times do |i|
        %div(class="grid-column grid-1-#{i}") 1, #{i}
    .grid-row
      - %w|0 3 6 9|.each do |i|
        %div(class="grid-column grid-3-#{i}") 3, #{i}
    .grid-row
      .grid-column.grid-2-1 2, 1
      .grid-column.grid-5-4 5, 4
      .grid-column.grid-2-10 2, 10

%section.container.container-styleguide
  %h1 Common Tags

  .grid-row
    .grid-column.grid-3-0
      %h1 Heading 1
      %p Text with an #{link_to "inline link"} in it.
      %p Text with a #{link_to "button", "#", :class => "button"} in it.
      %p This is <em>emphasized</em> text.
      %p This is <strong>strong</strong> text.
      %p This is super<sup>[1]</sup>. This is not<sub>[2]</sub>.
      %p This is <small>small</small> text.
      %p Here's a <code>&lt;code&gt;</code> tag.

    .grid-column.grid-3-3
      %h2 Heading 2
      %p= lorem.sentence
      %ul
        - 3.times do
          %li= lorem.sentence
      %p= lorem.sentence

    .grid-column.grid-3-6
      %h3 Heading 3
      %p= lorem.sentence
      %ol
        - 3.times do
          %li= lorem.sentence
      %p= lorem.sentence

    .grid-column.grid-3-9
      %h4 Heading 4
      %p= lorem.sentence
      %blockquote= lorem.sentence
      .block.block-styleguide
        %p This <code>.block</code> respects the vertical rhythm.
      %p= lorem.sentence

%section.container.container-styleguide
  %h1 Elements

  %h2 Button
  .block
    %a.button(href="#") Button
  .block
    %a.button.button_large(href="#") Large Button
  .block.button-group
    %a.button(href="#") Left
    %a.button(href="#") Middle
    %a.button(href="#") Right

%section.container.container-styleguide
  %h1 Modules

  %h2 Form Elements
  %form.grid-row
    .grid-column.grid-3-0
      .field.field-text
        = label_tag :text
        = text_field_tag :text, :id => :text
      .field.field-text.field-text_small
        = label_tag :text_small
        = text_field_tag :text_small, :id => :text_small
      = field_set_tag "Text (double)", :class => "field-text field-text_double" do 
        = text_field_tag :text_double, :id => :text_double
        = text_field_tag :text_double_2, :id => :text_double_2
      = field_set_tag "Text (triple)", :class => "field-text field-text_triple" do 
        = text_field_tag :text_triple, :id => :text_triple
        = text_field_tag :text_triple_2, :id => :text_triple_2
        = text_field_tag :text_triple_3, :id => :text_triple_3
      .field.field-textarea
        = label_tag :textarea
        = text_area_tag :textarea, :id => :textarea
      .field.field-textarea.field-textarea_large
        = label_tag :textarea_large
        = text_area_tag :textarea_large, :id => :textarea_large

    .grid-column.grid-3-3
      .field.field-select
        = label_tag :select
        %select(id="select" name="select")
          %option(value="1") An okay option
          %option(value="2") A good option
          %option(value="3") A great option
      .field.field-select
        = label_tag :select_complex
        %select(id="select_complex" name="select_complex")
          %option
          %option(value="0") The first option
          %optgroup(label="First Group")
            %option(value="1") An okay option
            %option(value="2") A good option
            %option(value="3") A great option
          %optgroup(label="Second Group")
            %option(value="4") A mediocre option
            %option(value="5") A bad option
            %option(value="6") A terrible option
          %optgroup(label="Third Group" disabled="disabled")
            %option(value="7") The best option
            %option(value="8") The worst option
      .field.field-checkbox
        %label
          = check_box_tag :checkbox, :id => :checkbox
          Checkbox
      = field_set_tag "Checkbox Group" do
        .field.field-checkbox
          %label
            = check_box_tag :checkbox_group, :value => 1
            Checkbox 1
        .field.field-checkbox
          %label
            = check_box_tag :checkbox_group, :value => 2
            Checkbox 2
        .field.field-checkbox
          %label
            = check_box_tag :checkbox_group, :value => 3
            Checkbox 3
      = field_set_tag "Radio Button Group" do
        .field.field-radio
          %label
            = radio_button_tag :radio_group, :value => 1
            Radio Button 1
        .field.field-radio
          %label
            = radio_button_tag :radio_group, :value => 2
            Radio Button 2
        .field.field-radio
          %label
            = radio_button_tag :radio_group, :value => 3
            Radio Button 3

  .grid-row
    .grid-column.grid-6-0
      %h2 Table
      %p= lorem.sentences 3
      %table.table
        %thead
          %tr
            %th The
            %th Table
            %th Header
        -# <tfoot> above <tbody> for performance
        %tfoot
          %tr
            %td The
            %td Table
            %td Footer
        %tbody
          - 5.times do
            %tr
              %td Cell
              %td Cell
              %td Cell

    .grid-column.grid-6-6
      %h2 Code Block
      %p= lorem.sentences 3
      = code_block "javascript" do
        :plain
          var map;
          function initialize() {
            var mapOptions = {
              zoom: 8,
              center: new google.maps.LatLng(-34.397, 150.644),
              mapTypeId: google.maps.MapTypeId.ROADMAP
            };
            map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
          }

          google.maps.event.addDomListener(window, 'load', initialize);


%head
  -# Reference: h5bp.com/d/head-Tips
  = dev_header
  %meta(charset='utf-8')
  %meta(content='IE=edge,chrome=1' http-equiv='X-UA-Compatible')
  %meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1')
  = yield_content :meta

  %title= data.page.title
  %meta(name='description' content="#{data.page.description}")

  = stylesheet_link_tag 'application'
  = yield_content :stylesheets

  - if content_for? :modernizr
    = javascript_include_tag 'vendor/modernizr.min'
    %script
      Modernizr.load([
      - if ! development?
        '//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js',
      - else
        = "'" + asset_path(:js, 'vendor/jquery.min') + "',"
      = yield_content :modernizr
      ]);

  - if ! development? && data.app.google_analytics
    %script
      var _gaq=[['_setAccount','#{data.app.google_analytics}'],['_trackPageview']];
      (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
      g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
      s.parentNode.insertBefore(g,s)}(document,'script'));

%body{:class => data.page.page_class, :id => data.page.page_id}

  / *** BEGIN CONTENT ***

  #page-wrap
    = yield

    #footer-push

  %footer#footer

  / *** END CONTENT ***

  = yield_content :javascripts


%head
  -# Reference: h5bp.com/d/head-Tips
  = dev_header
  %meta(charset='utf-8')
  %meta(content='IE=edge,chrome=1' http-equiv='X-UA-Compatible')
  %meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1')

  %title= data.page.title
  %meta(name='description' content="#{data.page.description}")

  = stylesheet_link_tag 'application'
  = javascript_include_tag 'vendor/modernizr.min'
  - if content_for? :stylesheets
    = yield :stylesheets

  %script
    Modernizr.load([
    - if ! development?
      '//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js',
    - else
      = "'" + asset_path(:js, 'vendor/jquery.min') + "',"
    = "'" + asset_path(:js, 'plugins') + "',"
    = "'" + asset_path(:js, 'application') + "'"
    ]);

  - if ! development?
    %script
      var _gaq=[['_setAccount','#{data.app.google_analytics}'],['_trackPageview']];
      (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
      g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
      s.parentNode.insertBefore(g,s)}(document,'script'));

%body{:class => data.page.page_class, :id => data.page.page_id}

